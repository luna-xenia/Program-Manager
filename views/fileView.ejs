<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/darkMode.css">

    <title>Project Manager</title>
    
    <style>
      
      a.disabled {
        pointer-events: none;
        cursor: default;
      }
      
    </style>
  </head>
  <body class="content">

    <div class="w3-top">
      <div class="w3-bar headers w3-card">
        <a href="/" class="w3-bar-item w3-button w3-hover-blue w3-padding-large">Home</a>
        <div class="w3-dropdown-click">
          <button class="w3-button w3-padding-large w3-hover-grey w3-grey disabled">View Mode</button>
          <div class="w3-dropdown-content w3-bar-block w3-card-4">
            <a href="/project-view/<%=name%>" class="w3-bar-item w3-hover-blue w3-button">Project View</a>
            <a href="/file-view/<%=name%>/" class="w3-bar-item w3-hover-blue w3-button">File View</a>
            <a href="/info-view/<%=name%>" class="w3-bar-item w3-hover-blue w3-button">Info View</a>
          </div>
        </div>
      </div>
    </div>
    
    <br>
  
    <div class="w3-section w3-row w3-margin" style="margin-top:46px;">
      
      <br>
      
      <a href="<%= "/project-view/" + name.split('/')[0] %>" class="w3-blue w3-btn" style="margin-left:0.125%">Back To Home</a>
      
      <br><br>
      
      <div id="files" class="w3-card w3-animate-bottom w3-mobile" style="margin-left:0.125%; width:99.75%">
        
        <div class="w3-container headers">
          <h2>Files</h2>
        </div>
        
        <br>
        
        <% for(var i = 0, l = filelist.length; i < l; i = i + 1) {%>
        <%   if (filelist[i].indexOf('.') >= 0) { %>
        <%     var link = "#"; %>
        <%   } else { %>
        <%     var link = url + "/" + filelist[i]; %>
        <%   } %>
        
        <a href="<%=link%>">
          <div class="w3-container content">
            <div class="w3-center w3-left-align"><p><%= filelist[i] %></p></div>
          </div>
        </a>
        <% } %>
        
      </div>

  </body>
</html>

